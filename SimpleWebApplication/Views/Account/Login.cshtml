@model SimpleWebApplication.Models.LoginViewModel

<div class="row justify-content-center">
    <div class="col-md-4">
        <h2 class="text-center">Login</h2>
        <form asp-action="Login" method="post" id="loginForm">
            <div class="mb-3">
                <label for="Username" class="form-label">Username</label>
                <input asp-for="Username" class="form-control" id="Username" required />
            </div>
            <div class="mb-3">
                <label for="Password" class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control" id="Password" required />
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-primary w-100">Login</button>
            </div>
            <div class="mb-3 text-center">
                <a asp-action="Register">Don't have an account? Register here.</a>
            </div>
        </form>
    </div>
</div>

<script>
    // Simple client-side validation using jQuery
    $('#loginForm').on('submit', function (e) {
        var username = $('#Username').val();
        var password = $('#Password').val();

        if (!username || !password) {
            e.preventDefault();
            alert("Please fill out both fields.");
        }
    });
</script>